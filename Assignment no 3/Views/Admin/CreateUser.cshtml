@using Assignment_no_3.Models
@model SignUp

<!DOCTYPE html>
<html>
<head>
    <title>Signin</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <Style>
        body {
            font-family: Dubai Light;
        }

        .container1 {
            width: 500px;
            height: 550px;
            margin: auto;
            margin-top: 80px;
            border: 2px solid powderblue;
            padding-left: 5px;
            padding-right: 5px;
        }

        .heading {
            font-size: 30px;
            font-weight: bold;
            background-color: Black;
            color: white;
            text-align: center;
        }

        .btn {
            float: right;
            margin-right: 30px;
        }

        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 1px solid red;
        }
    </Style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/admin/HomePage">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/admin/HomePage">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/LogOut">Lagout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <form class="container1" enctype="multipart/form-data" action="/admin/CreateUser" method="post">
        <div class="heading">
            Welcome to my Blog Website
        </div>
        <h1>Sign UP</h1>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Username*</label>
            <div class="col-sm-10">
                <input asp-for="username" class="form-control" placeholder="Username">
                <span asp-validation-for="username"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email*</label>
            <div class="col-sm-10">
                <input asp-for="email" class="form-control" placeholder="email@example.com">
                <span asp-validation-for="email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password*</label>
            <div class="col-sm-10">
                <input asp-for="password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="password"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Retype Password*</label>
            <div class="col-sm-10">
                <input asp-for="retypePassword" type="password" class="form-control" placeholder="Retype Password">
                <span asp-validation-for="retypePassword"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Image*</label><br />
            <input asp-for="myImage">
            <span asp-validation-for="myImage"></span>
        </div>
        <input type="submit" class="btn btn-primary btn-lg" value="Sign UP" />
    </form>
</body>
</html>
