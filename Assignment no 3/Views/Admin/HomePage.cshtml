@model List<Assignment_no_3.Models.User>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";

}

<div class="container">
    <a class="btn btn-primary mt-3" href="/admin/CreateUser" role="button">Create User</a>
</div>
<div class="container mt-3">
    <table class="table table-striped table-hover table-striped">
        <thead class="bg-info">
            <tr>
                <th>Profile Picture</th>
                <th>Username</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Assignment_no_3.Models.User s in Model)
            {

                <tr>
                    <td><img class="rounded-circle" width="50px" height="50px" src="@Url.Content(s.imageName)" alt="profileImage" /></td>
                    <td>   @s.username       </td>
                    <td>   @s.email       </td>
                    <td>
                        <a class="btn btn-secondary" asp-action="EditUser" asp-route-id="@s.id">Edit</a>
                        <a class="btn btn-danger" asp-action="Remove" asp-route-id="@s.id">Remove</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
